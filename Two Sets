Problem Statement:
Your task is to divide the numbers 1,2,â€¦,n into two sets of equal sum.

#include <bits/stdc++.h>
using namespace std;
#define int long long
const int mod = 1e9 + 7;
signed main() 
{
	ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	int tests = 1; //cin>>tests;
	while(tests--)
	{
		int n; cin>>n;
		if(n % 4 == 1 or n % 4 == 2){
			return cout<<"NO\n",0;
		}
		if(n == 3)
		{
			cout<<"YES\n";
			cout<<"2\n1 2\n1\n3\n";
			return 0;
		}		
		if(n % 4 == 0)
		{
			cout<<"YES\n";
			cout<<n/2<<nl;
			for(int i=1;i<=n/2;i+=2) cout<<i<<' '<<n-i+1<<' '; cout<<nl;
			cout<<n/2<<nl;
			for(int i=2;i<=n/2;i+=2) cout<<i<<' '<<n-i+1<<' '; cout<<nl;
		}
		if(n % 4 == 3)
		{
			cout<<"YES\n";
			cout<<n/2 + 1<<nl;
			cout<<"1 2 ";
			for(int i=4;i<=(n+3)/2;i+=2) cout<<i<<' '<<n-i+4<<' '; cout<<nl;
			cout<<n/2<<nl;
			cout<<"3 ";
			for(int i=5;i<=(n+3)/2;i+=2) cout<<i<<' '<<n-i+4<<' '; cout<<nl;
		}
	}
	return 0;
}
